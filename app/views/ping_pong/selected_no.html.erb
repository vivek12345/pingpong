<h1>Select Number</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:ping_pong, url: offend_no_path) do |f| %>

      <%= f.label :number %>
      <%= f.text_field :number, class: 'form-control' %>

      <%= f.submit "Offend", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>