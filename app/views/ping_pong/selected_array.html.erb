<h1>Enter values in comma separted form</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:ping_pong, url: defend_no_path) do |f| %>

      <%= f.label :numbers %>
      <%= f.text_field :numbers, class: 'form-control' %>

      <%= f.submit "Defend", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>